generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())

  // Relations
  coursesTaught    Course[]        @relation("TeacherCourses")
  studentCourses   StudentCourse[]
  groupMemberships GroupMember[]
  Attendance       Attendance[]
  Grade            Grade[]
}

model Subject {
  id      Int      @id @default(autoincrement())
  name    String
  courses Course[]
}

model Course {
  id        Int    @id @default(autoincrement())
  name      String
  subjectId Int
  teacherId Int

  subject        Subject         @relation(fields: [subjectId], references: [id])
  teacher        User            @relation("TeacherCourses", fields: [teacherId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  studentCourses StudentCourse[]
  Attendance     Attendance[]
  Grade          Grade[]
  Schedule       Schedule[]
}

model StudentCourse {
  id        Int @id @default(autoincrement())
  studentId Int
  courseId  Int

  student User   @relation(fields: [studentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  course  Course @relation(fields: [courseId], references: [id])
}

model Group {
  id      Int           @id @default(autoincrement())
  name    String
  members GroupMember[]
}

model GroupMember {
  id        Int @id @default(autoincrement())
  groupId   Int
  studentId Int

  group   Group @relation(fields: [groupId], references: [id])
  student User  @relation(fields: [studentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId Int
  courseId  Int
  date      DateTime
  status    String // Наприклад: 'present', 'absent', 'late'

  student User   @relation(fields: [studentId], references: [id])
  course  Course @relation(fields: [courseId], references: [id])
}

model Grade {
  id        Int      @id @default(autoincrement())
  studentId Int
  courseId  Int
  value     Float
  date      DateTime

  student User   @relation(fields: [studentId], references: [id])
  course  Course @relation(fields: [courseId], references: [id])
}

model Schedule {
  id        Int     @id @default(autoincrement())
  courseId  Int
  dayOfWeek String // Наприклад: 'Monday', 'Tuesday'
  startTime String // '09:00'
  endTime   String // '10:30'
  location  String?

  course Course @relation(fields: [courseId], references: [id])
}
